{
  "compilerOptions": {
    "target": "esnext",                         // Set to esnext for better compatibility with modern browsers
    "module": "esnext",                         // Use ES modules
    "moduleResolution": "node",                 // Resolve modules in a Node.js style
    "jsx": "react-jsx",                        // Use the JSX transform for React 17+
    "strict": true,                             // Enable strict type checking options
    "esModuleInterop": true,                    // Allow default imports from non-ES modules
    "skipLibCheck": true                        // Skip type checking of declaration files
  },
  "include": [
    "src/**/*",                                // Include all files in the src folder
    "src/assets.d.ts"                          // Include the assets declaration file
  ],
  "exclude": ["node_modules"]                   // Exclude node_modules folder
}
