{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "node",
    "isolatedModules": true,
    "moduleDetection": "force",

    /* Node.js-specific */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    /* Output settings */
    "outDir": "dist",
    "rootDir": ".", // Allow files from the root directory
    "noEmit": false,

    /* Additional settings */
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".", // Required for path aliases
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*", // Source files
    "postcss.config.ts", // Type-checking configuration files
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
